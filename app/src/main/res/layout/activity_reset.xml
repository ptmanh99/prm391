<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.prm391.project.moneymanager.ResetActivity">

    <TextView
        android:id="@+id/reset_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/header_Color"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/reset_header"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/sc1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reset_header"
        android:background="@color/background_color"
        android:scrollbars="vertical">


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="1"
            android:rowCount="4">


            <Button
                android:id="@+id/reset_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/reset_liabilities"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_toEndOf="@+id/reset_expenses"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/reset_budget"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reset_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="@string/reset_expenses"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reset_liabilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reset_expenses"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="@string/reset_liabilities"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reset_goals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/reset_liabilities"
                android:layout_alignEnd="@+id/reset_budget"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="@string/reset_goals"
                android:textSize="25sp"
                android:textStyle="bold" />

        </GridLayout>
    </ScrollView>
    </RelativeLayout>